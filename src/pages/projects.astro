---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Jorge Sanchez - Projects" description="Take a look at my projects">
    <search class="flex flex-col gap-4">
        <form action="./search/" class="flex justify-center">
            <div class="w-72 relative">
                <label class="sr-only" for="movie">Find a Movie</label>
                <input
                    type="search"
                    id="movie"
                    name="q"
                    placeholder="Search projects..."
                    class="block p-3 w-full z-20 text-sm text-gray-900 bg-white
					border border-gray-300 focus:outline-none rounded-lg"
                />
                <button
                    type="submit"
                    class="absolute top-0 end-0 p-3 text-sm font-medium h-full text-white bg-violet-800 rounded-e-lg focus:outline-none"
                >
                    <svg
                        class="w-4 h-4"
                        aria-hidden="true"
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 20 20"
                    >
                        <path
                            stroke="currentColor"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
                        ></path>
                    </svg>
                    <span class="sr-only">Search</span>
                </button>
            </div>
        </form>
        <section>
            <ul id="results" class="grid md:grid-cols-2 gap-4">
                {
                    [{}, {}, {}].map(({}) => {
                        return (
                            <li class="w-full bg-white border border-gray-200 rounded-lg p-4">
                                <article>
                                    <header>
                                        <figure>
                                            <img
                                                class="rounded-lg mb-2 w-full h-48 object-cover"
                                                src="/phylo-background.webp"
                                                alt="phylo background card"
                                            />
                                        </figure>
                                    </header>
                                    <footer>
                                        <h2 class="text-2xl font-bold text-gray-900">
                                            Phylo - Learning Platform
                                        </h2>
                                        <p class="font-normal text-gray-700">
                                            Learn, play and be the best student
                                            in you school or university whit
                                            Phylo.
                                        </p>
                                    </footer>
                                </article>
                            </li>
                        );
                    })
                }
            </ul>
            <output class="hidden" id="no-results">
                <h5 class="text-2xl font-bold text-gray-900 text-center">
                    No results found
                </h5>
            </output>
        </section>
    </search>
    <style></style>
</Layout>
