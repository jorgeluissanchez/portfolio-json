        <ul id="results" class="grid gap-4">
            {
                [{}, {}, {}].map(({}) => {
                    return (
                        <li class="w-full bg-white border border-gray-200 rounded-lg p-4">
                            <article>
                                <header class="flex mb-2 gap-2">
                                    <figure>
                                        <img
                                            src="profile-photo.webp"
                                            alt="jorge sanchez profile"
                                            class="object-cover aspect-square bg-gray-200 w-12 rounded-lg "
                                        />
